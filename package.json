{
  "name": "medical-ecommerce-platform",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend/*",
    "microservices/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:prescription\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend/api",
    "dev:prescription": "cd microservices/prescription-service && uvicorn main:app --reload",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "compliance:scan": "npm run compliance:scan --workspace=compliance",
    "audit:security": "npm audit --workspaces && npm run audit:hipaa"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  }
}
